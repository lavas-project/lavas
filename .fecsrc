{
    "eslint": {
        "env": {
            "node": true,
            "browser": true
        },

        "globals": {
            "console": true,
            "require": true,
            "define": true
        },

        "rules": {
            "no-console": 0,
            "brace-style": [2, "1tabs"],
            "fecs-no-require": "off",
            "fecs-prefer-async-await": "off",
            "fecs-one-var-per-line": "off"
        }
    }
}
